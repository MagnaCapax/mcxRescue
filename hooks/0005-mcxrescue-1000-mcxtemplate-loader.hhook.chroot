#!/bin/bash
set -e 

PRODUCT_ID="{{ PRODUCT_ID }}"

install -D -m 0755 /hook-files/load-mcxtemplate "/usr/lib/${PRODUCT_ID}/load-mcxtemplate"
install -D -m 0644 /hook-files/load-mcxtemplate.service /etc/systemd/system/load-mcxtemplate.service

systemctl add-wants multi-user.target load-mcxtemplate.service
